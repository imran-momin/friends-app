<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"> Email: <%= @friend.email %> <br> Phone Number <%= @friend.phone %> <br> Twitter: <%= @friend.twitter %> </p>
  <hr class="my-4">
  <div>
    <%= image_tag @friend.image,height: '200', width: '200'%>
  </div>
</div>

<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
<%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
